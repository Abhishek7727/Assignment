<mvc:View
    xmlns:cards="sap.f.cards"
    controllerName="com.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <VBox id="_IDGenVBox1">
                <Label
                    id="1"
                    text="Registration Form"
                    design="Bold"
                />
                <HBox>
                    <Label
                        id="_IDGenLabel1"
                        text="First Name:"
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="_IDGenInput1"
                        value="{/fname}"
                        placeholder="Enter your Firstname"
                    />
                </HBox>
                <HBox>
                    <Label
                        id="_IDGenLabel5"
                        text="Last Name:"
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="_IDGenInput5"
                        value="{/lname}"
                        placeholder="Enter your Lastname"
                    />
                </HBox>
                <HBox>
                    <Label
                        id="_IDGenLabel8"
                        text="Email:"
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="_IDGenInput8"
                        value="{/email}"
                        placeholder="Enter your Email"
                    />
                </HBox>
                <HBox>
                    <Label
                        id="_IDGenLabel2"
                        text="Gender"
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <RadioButtonGroup
                        id="_IDGenRadioButtonGroup1"
                        columns="3"
                        selectedIndex="{/satisfaction}"
                    >
                        <buttons>
                            <RadioButton
                                id="_IDGenRadioButton1"
                                text="Male"
                            />
                            <RadioButton
                                id="_IDGenRadioButton2"
                                text="Female"
                            />
                            <RadioButton
                                id="_IDGenRadioButton3"
                                text="LGBTQ"
                            />
                        </buttons>
                    </RadioButtonGroup>
                </HBox>
                <HBox>
                    <Label
                        id="_IDGenLabel6"
                        text="DOB: "
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <DatePicker
                        value="{/date}"
                        placeholder="Your Date of Birth"
                    />
                </HBox>
                <HBox>
                    <Label
                        id="_IDGenLabel7"
                        text="Domain: "
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <ComboBox
                        items="{
				                        	path: '/domains',
		                        			sorter: { path: 'text' }
			                            	}"
                        selectedKey="{/selectedDomain}"
                    >
                        <core:Item
                            key="{key}"
                            text="{text}"
                        />
                    </ComboBox>
                </HBox>

                <HBox>
                    <Label
                        id="_IDGenLabel3"
                        text="Skills"
                        design="Bold"
                        class="sapUiTinyMarginTop"
                    />
                    <CheckBox
                        id="_IDGenCheckBox1"
                        text="SAP"
                        selected="{/products/A}"
                    />
                    <CheckBox
                        id="_IDGenCheckBox2"
                        text="Web"
                        selected="{/products/B}"
                    />
                    <CheckBox
                        id="_IDGenCheckBox3"
                        text="ML"
                        selected="{/products/C}"
                    />
                </HBox>

                <Button
                    id="_IDGenButton1"
                    text="Submit"
                    press="onSubmit"
                    type="Success"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
